<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/product_container_view"
    android:layout_height="530dp"
    android:layout_margin="15dp"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="450dp">

            <ImageView
                android:id="@+id/product_list_image"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/product_on_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_red_dark"
                android:text="Sale"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@android:color/white"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dis_on_prod"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/discount"
                android:text="10%"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:textSize="16sp"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Product Title"
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/product_list_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Rs 99.99"
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/product_list_price"/>

    </LinearLayout>

</android.support.v7.widget.CardView>